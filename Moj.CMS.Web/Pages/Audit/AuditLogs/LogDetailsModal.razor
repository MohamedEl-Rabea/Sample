<MudDialog DisableSidePadding="true">
    <TitleContent>
        @*<MudIconButton Variant="Variant.Filled" Icon="@Icons.Material.Filled.Cancel" OnClick="Cancel"></MudIconButton>*@
        <MudText Typo="Typo.h6">
            @Globallocalizer["Log Info"]
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudContainer Style="height: 80vh; overflow-y: scroll">
            <MudGrid Class="mt-3">
                <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                    <MudItem md="2" xs="4">
                        <MudText Class="font-weight-bold">
                            @Globallocalizer["Request Id"]
                        </MudText>
                    </MudItem>
                    <MudItem md="10" xs="8">
                        <MudText class=" @(Rtl ? "float-right" : "float-left")">
                            @LogDetails.RequestId
                        </MudText>
                    </MudItem>
                </MudItem>
                <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                    <MudItem md="2" xs="4">
                        <MudText Class="font-weight-bold">
                            @Globallocalizer["Request Name"]
                        </MudText>
                    </MudItem>
                    <MudItem md="10" xs="8">
                        <MudText class=" @(Rtl ? "float-right" : "float-left")">
                            @LogDetails.RequestName
                        </MudText>
                    </MudItem>
                </MudItem>
                <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                    <MudItem md="2" xs="4">
                        <MudText Class="font-weight-bold">
                            @Globallocalizer["UserName"]
                        </MudText>
                    </MudItem>
                    <MudItem md="10" xs="8">
                        <MudText class=" @(Rtl ? "float-right" : "float-left")">
                            @LogDetails.UserName
                        </MudText>
                    </MudItem>
                </MudItem>
                <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                    <MudItem md="2" xs="4">
                        <MudText Class="font-weight-bold">
                            @Globallocalizer["Status"]
                        </MudText>
                    </MudItem>
                    <MudItem md="10" xs="8">
                        <MudText class=" @(Rtl ? "float-right" : "float-left")">
                            @Globallocalizer[LogDetails.Status]
                        </MudText>
                    </MudItem>
                </MudItem>
                @if (!string.IsNullOrEmpty(LogDetails.Message))
                {
                    <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                        <MudItem md="2" xs="4">
                            <MudText Class="font-weight-bold">
                                @Globallocalizer["Message"]
                            </MudText>
                        </MudItem>
                        <MudItem md="10" xs="8">
                            <MudText class=" @(Rtl ? "float-right" : "float-left")">
                                @LogDetails.Message
                            </MudText>
                        </MudItem>
                    </MudItem>
                }
                @if (!string.IsNullOrEmpty(LogDetails.Exception))
                {
                    <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                        <MudItem md="2" xs="4">
                            <MudText Class="font-weight-bold">
                                @Globallocalizer["Details"]
                            </MudText>
                        </MudItem>
                        <MudItem md="10" xs="8">
                            <MudText Style="height: 230px; border: 1px solid #dee2e6; overflow: auto; white-space: pre; direction: initial; ">
                                @LogDetails.Exception
                            </MudText>
                        </MudItem>
                    </MudItem>
                }
                @if (!string.IsNullOrEmpty(LogDetails.InputDetails))
                {
                    <MudItem md="12" xs="12" Class="h3 text-justify d-inline-flex p-2">
                        <MudItem md="2" xs="4">
                            <MudText Class="font-weight-bold">
                                @Globallocalizer["Input Details"]
                            </MudText>
                        </MudItem>
                        <MudItem md="10" xs="8">
                            <MudText Style="border: 1px solid #dee2e6; overflow: auto; word-break: break-word; direction: initial;">
                                @LogDetails.InputDetails
                            </MudText>
                        </MudItem>
                    </MudItem>
                }
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>
